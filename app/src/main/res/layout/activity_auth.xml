<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AuthActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/authFragmentContainer"
        android:name="com.dosmith.omdb_favourites.views.LoginFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.95"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".025"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/authMenuContainer"
        android:name="com.dosmith.omdb_favourites.views.AuthMenuFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".025"/>

</LinearLayout>